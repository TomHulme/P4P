        <my:SurfaceSlider Height="40" HorizontalAlignment="Left" Margin="89,0,0,0" Name="Count_Slider" VerticalAlignment="Center" Width="287" Value="4" Minimum="1" Maximum="7" ValueChanged="Count_Slider_ValueChanged" />
        <Label Content="i Pieces" Height="28" HorizontalAlignment="Left" Margin="89,60,0,0" Name="Count_Label" VerticalAlignment="Top" Width="287" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
    </Grid>
</UserControl>
